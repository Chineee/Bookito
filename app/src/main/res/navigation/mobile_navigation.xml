<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/to_navigation_library">

    <fragment
        android:id="@+id/navigation_requests"
        android:name="com.zerobudget.bookito.ui.inbox.InboxFragment"
        android:label="@string/title_inbox"
        tools:layout="@layout/fragment_inbox" >
        <action
            android:id="@+id/action_navigation_requests_to_testFragment"
            app:destination="@id/testFragment" />
    </fragment>

    <navigation
        android:id="@+id/to_navigation_library"
        app:startDestination="@id/navigation_library">
        <fragment
            android:id="@+id/navigation_library"
            android:name="com.zerobudget.bookito.ui.library.LibraryFragment"
            android:label="@string/title_library"
            tools:layout="@layout/fragment_library" >
            <action
                android:id="@+id/action_navigation_library_to_navigation_insertNew"
                app:destination="@id/navigation_insertNew"
                app:popExitAnim="@android:anim/fade_out" />
            <action
                android:id="@+id/action_navigation_library_to_bookDeleteFragment"
                app:destination="@id/bookDeleteFragment" />

        </fragment>

        <fragment
            android:id="@+id/bookDeleteFragment"
            android:name="com.zerobudget.bookito.ui.library.BookDeleteFragment"
            android:label="fragment_delete_book"
            tools:layout="@layout/fragment_delete_book" >
            <action
                android:id="@+id/action_bookDeleteFragment_to_navigation_library"
                app:destination="@id/navigation_library" />
        </fragment>

        <fragment
            android:id="@+id/navigation_insertNew"
            android:name="com.zerobudget.bookito.ui.add.AddFragment"
            android:label="@string/title_add"
            tools:layout="@layout/fragment_add" >
            <action
                android:id="@+id/action_navigation_insertNew_to_confirmAddFragment"
                app:destination="@id/confirmAddFragment" />
        </fragment>

        <fragment
            android:id="@+id/confirmAddFragment"
            android:name="com.zerobudget.bookito.ui.add.AddConfirmFragment"
            android:label="ConfirmAddFragment" >
            <action
                android:id="@+id/action_confirmAddFragment_to_navigation_library"
                app:destination="@id/navigation_library" />
        </fragment>
    </navigation>

    <fragment
        android:id="@+id/testFragment"
        android:name="com.zerobudget.bookito.TestFragment"
        android:label="fragment_test"
        tools:layout="@layout/fragment_test" >
        <action
            android:id="@+id/action_testFragment_to_navigation_requests"
            app:destination="@id/navigation_requests" />
    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.zerobudget.bookito.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />


</navigation>