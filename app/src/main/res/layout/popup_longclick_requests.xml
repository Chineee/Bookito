<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        style="@style/color_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_popup"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:background="?attr/colorPrimaryContainer"
                android:gravity="left|center_vertical"
                android:paddingHorizontal="32dp"
                android:text="Title"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/info_request"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:gravity="left|center_vertical"
                android:paddingHorizontal="32dp"
                android:text="Informazioni richiesta"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_popup" />

            <!--TextView
                android:id="@+id/feedback"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:gravity="left|center_vertical"
                android:paddingHorizontal="32dp"
                android:text="Recensione"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_request" /-->

            <TextView
                android:id="@+id/close_request"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:gravity="left|center_vertical"

                android:paddingHorizontal="32dp"
                android:text="Segna come conclusa"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_request" />

            <TextView
                android:id="@+id/confirm_book_given"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:gravity="left|center_vertical"
                android:visibility="gone"
                android:paddingHorizontal="32dp"
                android:text="Conferma consegna Libro"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/close_request" />

            <TextView
                android:id="@+id/cancel_request"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:gravity="left|center_vertical"
                android:paddingHorizontal="32dp"
                android:text="Annulla richiesta (richiesta in corso)"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/confirm_book_given" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>