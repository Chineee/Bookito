<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/chat_profile_card_view"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="35dp">


            <com.lelloman.identicon.view.ClassicIdenticonView
                android:id="@+id/gravater_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:scaleType="centerCrop"
                app:hash="0"
                tools:layout_editor_absoluteX="252dp"
                tools:layout_editor_absoluteY="8dp"/>

            <ImageView
                android:id="@+id/small_profile_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:layout_editor_absoluteX="252dp"
                tools:layout_editor_absoluteY="8dp"
                android:visibility="gone"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/messages_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:maxWidth="200dp"
            android:text="15/01/2023"
            android:textColor="?colorOnBackground"
            android:textSize="14sp"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message_content"
            android:textColor="?colorOnSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/message_view"
            android:maxWidth="200dp"
            android:padding="8dp"
            tools:text="@string/lorem_ipsum_long" />

        <ImageView
            android:id="@+id/book_thumbnail"
            android:layout_width="167dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="h,1:1.4375"
            app:layout_constraintTop_toBottomOf="@id/message_content"
            android:padding="8dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/message_sent_at"
            android:textColor="?colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:maxWidth="200dp"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/message_content"
            android:text="11:11"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>